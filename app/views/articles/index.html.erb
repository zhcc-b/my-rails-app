<div class="container mt-4">
  <h1>Wikipedia Search</h1>
  
  <%= form_tag root_path, method: :get, class: 'form-inline my-4' do %>
    <div class="input-group w-100">
      <%= text_field_tag :q, @query, class: 'form-control', placeholder: 'Enter search keywords...' %>
      <div class="input-group-append">
        <%= submit_tag 'Search', class: 'btn btn-primary' %>
      </div>
    </div>
  <% end %>

  <% if @articles.present? %>
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Summary</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article| %>
            <tr>
              <td><%= link_to article['title'], article_path(article['title']) %></td>
              <td><%= article['snippet'].html_safe %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>